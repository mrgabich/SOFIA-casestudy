ifeq ($(CC_TYPE),GCC)
    CFLAGS+= -flax-vector-conversions -static -DVWIDTH=0 -DUPPERLIMIT=512
else
    ifeq ($(ENVIRONMENT),riscv64)
        CFLAGS+= -flax-vector-conversions -static -DVWIDTH=0 -DUPPERLIMIT=256 -mrvv-vector-bits=512 -Rpass=.*
    else
        CFLAGS+= -flax-vector-conversions -static -DVWIDTH=0 -DUPPERLIMIT=256 -march=armv8.2-a+sve -msve-vector-bits=512 -Rpass=.*
    endif
endif
